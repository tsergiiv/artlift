{% extends 'cabinet.html.twig' %}

{% block title %}Shots{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{% endblock %}

{% block body %}
	
<div class="container">
	<div class="row justify-content-center">
		<div style="text-align: center">
			<h1>Boost Shot</h1>
			<img src="{{ asset('img/' ~ shot.image) }}" alt="">
			<h2>Choose your plan</h2>
			<form method="post" action="{{ path('shots_checkout') }}">
				<input type="text" name="shot_id" value="{{ shot.id }}" hidden>
				{% for s in subs %}
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="sub_id" id="inlineRadio{{ s.id }}" value="{{ s.id }}" required>
						<label class="form-check-label" for="inlineRadio{{ s.id }}">{{ s.name }} ${{ s.price | number_format(2, '.', ',') }}
							<br>({{ s.likes }} likes, {{ s.comments }} comments)</label>
					</div>
				{% endfor %}
				<button type="submit" class="btn btn-primary">Checkout</button>
			</form>
		</div>
	</div>
</div>

{% endblock %}
