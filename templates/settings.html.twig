<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
    
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="{{ asset('js/scripts.js') }}"></script>
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>

        {% include 'header.html.twig' %}

        <main>
            <div class="container settings-container grid">
                <aside class="colum-left grid">
                    <div class="settings-user">
                        <div class="settings-user__info flex flex-column align-center">
                            <div class="settings-user__avatar" style="background: url({{ asset('img/avatar.png') }}) center / cover no-repeat"></div>
                            <div class="settings-user__name">{{ app.user.fullName }}</div>
                            <div class="settings-user__rank">Newbie</div>
                        </div>
                    </div>
    
                    {% set route_name = app.request.attributes.get('_route') %}
                    
                    <ul class="settings-nav flex flex-column list-unstyled">
                        <li>
                            <a href="{{ path('settings_profile') }}" class="{{ route_name == "settings_profile" ? 'active' : '' }} flex align-center">
                        <span class="settings-icon flex align-center justify-center">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g id="24px/Profile">
                            <g id="Profile">
